upstream fastcgi_backend {
    server php:9000;
}

server {
    listen 80;
    listen [::]:80;
    server_name localhost;
    #return 301 https://$server_name$request_uri;

    set $WWW_ROOT /var/www/html/;
    root $WWW_ROOT;

    index index.php index.html index.htm index.nginx-debian.html;

    server_name localhost;

    location / {
        try_files $uri $uri/ /dashboard/public/index.php?$query_string;
    }

    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass php:9000;
    }

    location ~ /\.ht {
        deny all;
    }

    location ~ /.well-known {
        allow all;
    }

}

